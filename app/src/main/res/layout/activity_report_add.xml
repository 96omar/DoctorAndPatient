<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReportAdd"
    android:layout_marginTop="30dp">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="visible"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:layout_weight="1"
            android:backgroundTint="@color/colorAccent"
            android:clickable="true"
            android:elevation="3dp"
            android:foreground="?android:attr/selectableItemBackground"
            card_view:cardCornerRadius="9dp"
            card_view:cardElevation="5dp"
            card_view:cardMaxElevation="5dp"
            card_view:contentPadding="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/cardview_light_background">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="20dp">
                <TextView
                    android:text="Report Sheet"
                    android:textSize="27sp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="5dp"/>
                <EditText
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:focusable="true"
                    android:inputType="text"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:singleLine="true"
                    android:gravity="right"
                    android:layout_gravity="center"
                    android:maxLength="10000"
                    android:maxLines="10"
                    android:hint="Today"
                    />
            </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="10dp"
                    android:background="@color/cardview_dark_background" />



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="Dr ID:"
                        android:textSize="20dp"

                        />
                    <EditText
                        android:id="@+id/dc_id_add"
                        android:layout_width="280dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:focusable="true"
                        android:inputType="text"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:layout_gravity="center"
                        android:maxLength="10000"
                        android:maxLines="10"
                        android:hint="You\'r ID"
                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="Dr Name:"
                        android:textSize="20dp"

                        />
                    <EditText
                        android:id="@+id/dc_name_add"
                        android:layout_width="280dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:focusable="true"
                        android:inputType="text"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:layout_gravity="center"
                        android:maxLength="10000"
                        android:maxLines="10"
                        android:hint="You\'r Name"
                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="Patient ID:"
                        android:textSize="20dp"

                        />
                    <EditText
                        android:id="@+id/paient_id_add"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:focusable="true"
                        android:inputType="text"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:layout_gravity="center"
                        android:maxLength="10000"
                        android:maxLines="10"
                        android:hint="Enter Patient ID" />




                </LinearLayout>
                    <Button
                                android:id="@+id/btn_search"
                                android:layout_width="wrap_content"
                                android:layout_height="20dp"
                                android:layout_gravity="right"
                                android:text="Search"
                                android:textColor="@color/cardview_light_background"
                                android:textStyle="bold"
                                android:textSize="15dp"
                                android:background="@color/cardview_dark_background"/>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="Patient Name:"
                        android:textSize="20dp"

                        />
                    <EditText
                        android:id="@+id/p_name_add"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:focusable="true"
                        android:inputType="text"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:layout_gravity="center"
                        android:maxLength="10000"
                        android:maxLines="10"
                        android:hint="Enter patient Name"
                        />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="Patient Age:"
                        android:textSize="20dp"

                        />
                    <EditText
                        android:id="@+id/p_age_add"
                        android:layout_width="220dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:focusable="true"
                        android:inputType="number"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:layout_gravity="center"
                        android:maxLength="10000"
                        android:maxLines="10"
                        android:hint="Enter patient Age"
                        />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="P Addresses:"
                        android:textSize="20dp"

                        />
                    <EditText
                        android:id="@+id/p_addresses_add"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:focusable="true"
                        android:inputType="text"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:layout_gravity="center"
                        android:maxLength="10000"
                        android:maxLines="10"
                        android:hint="Enter patient Addresses"
                        />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="Chronic Disease:"
                        android:textSize="20dp"

                        />
                    <EditText
                        android:id="@+id/p_diss_add"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:focusable="true"
                        android:inputType="text"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:layout_gravity="center"
                        android:maxLength="10000"
                        android:maxLines="10"
                        android:hint="Enter patient Chronic Disease"
                        />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="Any previous operations:"
                        android:textSize="19dp"

                        />
                    <EditText
                        android:id="@+id/p_operation_add"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:focusable="true"
                        android:inputType="text"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:layout_gravity="center"
                        android:maxLength="10000"
                        android:maxLines="10"
                        android:hint="operation"
                        />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="Gender : "
                        android:textSize="20dp"

                        />
                    <Spinner
                        android:id="@+id/Spinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:spinnerMode="dropdown"
                        android:textAlignment="center" />


                </LinearLayout>
                <TextView
                    android:text="Vital Processes"
                    android:textSize="23sp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:gravity="left"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="10dp"
                    android:background="@color/cardview_dark_background" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="Pulse  :  "
                        android:textSize="20dp"

                        />
                    <EditText
                        android:id="@+id/pulse"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:focusable="true"
                        android:inputType="text"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:layout_gravity="center"
                        android:maxLength="10000"
                        android:maxLines="10"
                        android:hint="Pulse"
                        />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="Temperature  :  "
                        android:textSize="20dp"

                        />
                    <EditText
                        android:id="@+id/temp"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:focusable="true"
                        android:inputType="text"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:layout_gravity="center"
                        android:maxLength="10000"
                        android:maxLines="10"
                        android:hint="Temp"
                        />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="BI.P  :  "
                        android:textSize="20dp"

                        />
                    <EditText
                        android:id="@+id/bi"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:focusable="true"
                        android:inputType="text"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:layout_gravity="center"
                        android:maxLength="10000"
                        android:maxLines="10"
                        android:hint="BI.P"
                        />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="Resp  :  "
                        android:textSize="20dp"

                        />
                    <EditText
                        android:id="@+id/resp"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:focusable="true"
                        android:inputType="text"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:layout_gravity="center"
                        android:maxLength="10000"
                        android:maxLines="10"
                        android:hint="Resp"
                        />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="Others  :  "
                        android:textSize="20dp"

                        />
                    <EditText
                        android:id="@+id/other"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:focusable="true"
                        android:inputType="text"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:layout_gravity="center"
                        android:maxLength="10000"
                        android:maxLines="10"
                        android:hint="Others"
                        />


                </LinearLayout>

                <TextView
                    android:text="Provisional Diagnosis"
                    android:textSize="23sp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:gravity="left"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="10dp"
                    android:background="@color/cardview_dark_background" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="Dc ID:  "
                        android:textSize="20dp"
                        />
                    <TextView
                        android:id="@+id/dc_id_other"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:focusable="true"
                        android:inputType="text"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:layout_gravity="center"
                        android:maxLength="10000"
                        android:maxLines="10"
                        android:hint="id"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="DR Name:"
                        android:textSize="20dp"
                        />
                    <TextView
                        android:id="@+id/dc_name_other"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:focusable="true"
                        android:inputType="text"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:layout_gravity="center"
                        android:maxLength="10000"
                        android:maxLines="10"
                        android:hint="name"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="Last Date Examination:"
                        android:textSize="18dp"

                        />
                    <TextView
                        android:id="@+id/p_date_retrive"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:focusable="true"
                        android:inputType="text"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:layout_gravity="center"
                        android:maxLength="10000"
                        android:maxLines="10"
                        android:hint="Date ../../..."
                        />






                </LinearLayout>
                <TextView
                    android:id="@+id/prev_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:focusable="true"
                    android:inputType="textCapSentences|textMultiLine"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_gravity="center"
                    android:maxLength="10000"
                    android:maxLines="10"
                    android:hint="Data" />

                <TextView
                    android:text="New Examination"
                    android:textSize="23sp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:gravity="left"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="10dp"
                    android:background="@color/cardview_dark_background" />

                <EditText
                    android:id="@+id/dc_current_examin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:focusable="true"
                    android:inputType="textCapSentences|textMultiLine"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_gravity="center"
                    android:maxLength="10000"
                    android:maxLines="10"
                    android:hint="Add New Examination Details" />

                <TextView
                    android:text="Add New Diagnosis"
                    android:textSize="23sp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:gravity="left"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="10dp"
                    android:background="@color/cardview_dark_background" />

                <EditText
                    android:id="@+id/dc_dia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:focusable="true"
                    android:inputType="textCapSentences|textMultiLine"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_gravity="center"
                    android:maxLength="10000"
                    android:maxLines="10"
                    android:hint="Add New Diagnosis" />
                <Button
                    android:id="@+id/btn_save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginBottom="20dp"
                    android:layout_gravity="right"
                    android:text="Save"
                    android:textColor="@color/cardview_light_background"
                    android:textStyle="bold"
                    android:textSize="22dp"
                    android:background="@color/cardview_dark_background"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>

</ScrollView>